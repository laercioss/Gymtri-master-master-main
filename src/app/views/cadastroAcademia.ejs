<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Cadastro de Academia</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Cadastro de Academia</h1>

    <% if (falha) { %>
        <div class="erro"><%= falha %></div>
    <% } %>

    <% if (listaErros) { %>
        <ul class="erros">
            <% listaErros.forEach(erro => { %>
                <li><%= erro.msg %></li>
            <% }) %>
        </ul>
    <% } %>

    <form action="/academia/cadastro" method="POST">
        <label>Nome:</label>
        <input type="text" name="nome" value="<%= valores?.nome || '' %>"><br>

        <label>E-mail:</label>
        <input type="email" name="email" value="<%= valores?.email || '' %>"><br>

        <label>Senha:</label>
        <input type="password" name="senha"><br>

        <label>Confirmar Senha:</label>
        <input type="password" name="c-senha"><br>

        <label>CNPJ:</label>
        <input type="text" name="cnpj" value="<%= valores?.cnpj || '' %>"><br>

        <label>EndereÃ§o:</label>
        <input type="text" name="endereco" value="<%= valores?.endereco || '' %>"><br>

        <button type="submit">Cadastrar</button>
    </form>
</body>
</html>
